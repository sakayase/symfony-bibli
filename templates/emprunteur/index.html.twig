{% extends 'base.html.twig' %}

{% block title %}Emprunteur index{% endblock %}

{% block body %}
    <h1>Emprunteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Blacklist</th>
                <th>Carte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunteur in emprunteurs %}
            <tr>
                <td>{{ emprunteur.id }}</td>
                <td>{{ emprunteur.nom }}</td>
                <td>{{ emprunteur.email }}</td>
                <td>{{ emprunteur.blacklist ? 'Yes' : 'No' }}</td>
                <td>{{ emprunteur.carte ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('emprunteur_show', {'id': emprunteur.id}) }}">show</a>
                    <a href="{{ path('emprunteur_edit', {'id': emprunteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emprunteur_new') }}">Create new</a>
{% endblock %}
