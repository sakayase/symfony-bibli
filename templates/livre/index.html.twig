{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>Livre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Disponible</th>
                <th>Titre</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>Auteur</th>
                <th>AnneeEdition</th>
                <th>NombrePages</th>
                <th>NomEditeur</th>
                <th>Cote</th>
                <th>ISBN</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td></td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.genre }}</td>
                <td>{{ livre.langue }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.anneeEdition }}</td>
                <td>{{ livre.nombrePages }}</td>
                <td>{{ livre.nomEditeur }}</td>
                <td>{{ livre.cote }}</td>
                <td>{{ livre.ISBN }}</td>
                <td>{{ livre.etat }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}">show</a>
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
            {{ dump(livre.emprunts) }}
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('livre_new') }}">Create new</a>
{% endblock %}
